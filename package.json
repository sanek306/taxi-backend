{
  "name": "taxi-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "copy-env": "@powershell copy .env src/.env",
    "predev": "yarn run copy-env && yarn run types",
    "dev": "cd src && nodemon --exec ts-node index.ts ts,graphql",
    "copy-env-mac": "cp -R .env src/.env",
    "predev-mac": "yarn run copy-env-mac && yarn run types",
    "dev-mac": "cd src && nodemon --exec ts-node index.ts ts,graphql"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanek306/taxi-backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sanek306/taxi-backend/issues"
  },
  "homepage": "https://github.com/sanek306/taxi-backend#readme",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/helmet": "^0.0.45",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.11.1",
    "@types/twilio": "^2.11.0",
    "@types/jsonwebtoken": "^8.3.9",
    "babel-runtime": "^6.26.0",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "nodemon": "^2.0.3",
    "ts-node": "^8.8.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "class-validator": "^0.11.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "graphql-tools": "^5.0.0",
    "graphql-yoga": "^1.18.3",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "merge-graphql-schemas": "^1.7.8",
    "morgan": "^1.10.0",
    "pg": "^8.0.2",
    "twilio": "^3.42.2",
    "typeorm": "^0.2.24"
  }
}
